<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="general"
        android:title="@string/general_settings_title" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="ignore_airplane_mode"
            android:summary="@string/ignore_airplane_summary"
            android:title="@string/ignore_airplane_title" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="ignore_no_headset"
            android:summary="@string/ignore_no_headset_summary"
            android:title="@string/ignore_no_headset_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="tuning"
        android:title="@string/tuning_settings_title" >
        <ListPreference
            android:defaultValue="12"
            android:entries="@array/seek_sensitivity_entries"
            android:entryValues="@array/seek_sensitivity_values"
            android:key="seek_sensitivity"
            android:layout="?android:attr/preferenceLayoutChild"
            android:summary="@string/seek_sensitivity_summary"
            android:title="@string/seek_sensitivity_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="interface"
        android:title="@string/interface_settings_title" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="hide_actionbar"
            android:summary="@string/hide_actionbar_summary"
            android:title="@string/hide_actionbar_title" />
    </PreferenceCategory>
</PreferenceScreen>